{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "salto-vscode/**"
    ]
  },
  "name": "salto_monorepo",
  "devDependencies": {
    "codecov": "^3.5.0",
    "lerna": "^3.18.3"
  },
  "scripts": {
    "build": "lerna run build",
