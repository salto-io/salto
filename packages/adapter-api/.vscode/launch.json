    "version": "0.2.0",
    "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "adapter-api Debug Jest Tests",
          "cwd": "${workspaceFolder}",
          "args": [
              "${workspaceRoot}/node_modules/.bin/jest",
              "--runInBand",
              "--config",
              "${workspaceRoot}/jest.config.js"
          ],
          "outFiles": [],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
      },
    ]
}
