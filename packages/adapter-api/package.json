{
  "name": "adapter-api",
  "version": "0.1.0",
  "description": "Salto Adapter API",
  "repository": {
    "type": "git",
    "url": "https://github.com/salto-io/salto_monorepo"
  },
  "private": true,
  "files": [
    "bin/**/*",
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "yarn run build",
    "prepublishOnly": "yarn test",
    "build": "yarn run lint && yarn run build-ts",
    "test": "jest --forceExit --detectOpenHandles",
    "clean-ts": "node ./node_modules/.bin/ts-cleaner -d dist -s . -v",
    "clean-ts-test": "yarn run clean-ts && yarn run test",
    "watch-test": "yarn run tsc-watch --onSuccess 'yarn run clean-ts-test'",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx ./",
    "lint-fix": "yarn run lint -- --fix"
  },
  "dependencies": {
    "@salto/dag": "0.1.0",
    "@salto/lowerdash": "0.1.0",
    "chalk": "^2.4.2",
    "lodash": "^4.17.11",
    "logform": "^2.1.2",
    "minimatch": "^3.0.4",
    "winston": "^3.2.1",
    "winston-transport": "^4.3.0"
  },
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/lodash": "^4.14.133",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^9.4.6",
    "@types/shelljs": "^0.7.8",
    "@types/supertest": "^2.0.4",
    "@types/wu": "^2.1.39",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "dts-gen": "^0.5.8",
    "eslint": "^6.2.2",
    "eslint-config-airbnb": "18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jest": "^24.0.0",
    "jest-circus": "^24.9.0",
    "jest-junit": "^6.4.0",
    "tmp": "^0.1.0",
    "ts-cleaner": "^1.0.2",
    "tsc-watch": "^2.2.1",
    "typescript": "^3.5.3"
  }
}
