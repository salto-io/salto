{
  "name": "@salto-io/cli",
  "version": "0.4.8",
  "license": "SEE LICENSE IN LICENSE",
  "description": "cli on top of salto core",
  "repository": {
    "type": "git",
    "url": "https://github.com/salto-io/salto"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "salto": "./bin/salto"
  },
  "files": [
    "bin",
    "dist/src",
    "dist/index.*"
  ],
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn generate && yarn lint && yarn build-ts",
    "test": "jest",
    "build-ts": "tsc -b",
    "watch-ts": "tsc -b -w",
    "lint": "eslint --max-warnings 0 ./",
    "lint-fix": "yarn lint --fix",
    "format": "prettier --write . --ignore-path=../../.prettierignore --ignore-path=../../.gitignore --ignore-path=.gitignore",
    "check-format": "prettier --check . --ignore-path=../../.prettierignore --ignore-path=../../.gitignore --ignore-path=.gitignore",
    "clean": "rm -rf ./dist ./pkg .eslintcache src/generated",
    "watch-test": "yarn tsc-watch",
    "e2e-test": "RUN_E2E_TESTS=1 jest",
    "generate": "./generate.sh",
    "package": "./package.sh"
  },
  "dependencies": {
    "@salto-io/adapter-api": "0.4.8",
    "@salto-io/adapter-creators": "0.4.8",
    "@salto-io/adapter-utils": "0.4.8",
    "@salto-io/core": "0.4.8",
    "@salto-io/dag": "0.4.8",
    "@salto-io/file": "0.4.8",
    "@salto-io/logging": "0.4.8",
    "@salto-io/lowerdash": "0.4.8",
    "@salto-io/parser": "0.4.8",
    "@salto-io/salesforce-adapter": "0.4.8",
    "@salto-io/workspace": "0.4.8",
    "chalk": "^2.4.2",
    "commander": "^10.0.0",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "inquirer": "^7.3.1",
    "lodash": "^4.17.21",
    "moment": "^2.24.0",
    "open": "^7.2.0",
    "ora": "^4.0.3",
    "pietile-eventemitter": "^1.0.0",
    "source-map-support": "^0.5.13",
    "wu": "^2.1.0"
  },
  "devDependencies": {
    "@salto-io/e2e-credentials-store": "0.4.8",
    "@salto-io/element-test-utils": "0.4.8",
    "@salto-io/test-utils": "0.4.8",
    "@types/express": "^4.17.7",
    "@types/inquirer": "7.3.1",
    "@types/jest": "^29.5.12",
    "@types/source-map-support": "^0.5.0",
    "@types/supertest": "^2.0.4",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "memory-streams": "^0.1.3",
    "nexe": "4.0.0-rc.2",
    "null-loader": "^4.0.1",
    "prettier": "3.2.5",
    "raw-loader": "^4.0.2",
    "source-map-loader": "^4.0.1",
    "supertest": "^5.0.0",
    "tmp-promise": "^2.0.2",
    "ts-jest": "^29.2.0",
    "tsc-watch": "^2.2.1",
    "turbo": "^2.0.6",
    "typescript": "4.8.4",
    "wait-for-expect": "^3.0.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.3.0"
  }
}
