    "version": "0.2.0",
    "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "Debug Jest Tests",
          "cwd": "${workspaceFolder}",
          "args": [
              "${workspaceRoot}/node_modules/.bin/jest",
              "--runInBand",
              "--config",
              "${workspaceRoot}/jest.config.js"
          ],
          "windows": {
              "args": [
                  "${workspaceRoot}/node_modules/jest/bin/jest.js",
                  "--runInBand",
                  "--config",
                  "${workspaceRoot}/jest.config.js"
              ],
          },
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
      },
    ]
}