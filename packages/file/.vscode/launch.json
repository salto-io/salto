{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "file Debug Jest Tests",
      "cwd": "${workspaceFolder}",
      "args": [
        "${workspaceFolder}/../../node_modules/.bin/jest",
        "--runInBand",
        "--config",
        "${workspaceFolder}/jest.config.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
