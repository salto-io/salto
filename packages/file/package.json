{
  "name": "@salto-io/file",
  "version": "0.1.12",
  "license": "Apache-2.0",
  "description": "File System Utils",
  "repository": {
    "type": "git",
    "url": "https://github.com/salto-io/salto_monorepo"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src",
    "index.ts"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "yarn run build",
    "prepublishOnly": "yarn test",
    "build": "yarn run lint && yarn run build-ts",
    "test": "jest",
    "clean": "rm -rf ./dist",
    "clean-ts": "node ./node_modules/.bin/ts-cleaner -d dist -s . -v",
    "clean-ts-test": "yarn run clean-ts && yarn run test",
    "watch-test": "yarn run tsc-watch --onSuccess 'yarn run clean-ts-test'",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "eslint --cache --max-warnings 0 --ext .js,.jsx,.ts,.tsx ./",
    "lint-fix": "yarn run lint --fix"
  },
  "dependencies": {
    "@salto-io/lowerdash": "0.1.12",
    "mkdirp": "^0.5.1",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.7.1",
    "@types/rimraf": "^2.0.3",
    "@types/shelljs": "^0.7.8",
    "@types/supertest": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "2.21.0",
    "@typescript-eslint/parser": "2.21.0",
    "eslint": "^6.2.2",
    "eslint-config-airbnb": "18.0.1",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jest": "^24.0.0",
    "jest-circus": "^24.9.0",
    "jest-junit": "^6.4.0",
    "ts-cleaner": "^1.0.2",
    "tsc-watch": "^2.2.1",
    "tmp-promise": "^2.0.2",
    "typescript": "3.8.3"
  }
}
