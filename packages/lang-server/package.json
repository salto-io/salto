{
  "name": "@salto-io/lang-server",
  "version": "0.2.13",
  "license": "Apache-2.0",
  "description": "Salto lang server",
  "repository": {
    "type": "git",
    "url": "https://github.com/salto-io/salto"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src",
    "test",
    "index.ts"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn concurrently \"yarn lint\" \"yarn build-ts\"",
    "test": "jest",
    "clean": "rm -rf ./dist .eslintcache",
    "clean-ts": "../../build_utils/clean-old-ts.sh",
    "clean-ts-test": "yarn clean-ts && yarn test",
    "watch-test": "yarn tsc-watch --onSuccess 'yarn clean-ts-test'",
    "build-ts": "tsc -b && yarn clean-ts",
    "watch-ts": "tsc -b -w",
    "lint": "eslint --cache --max-warnings 0 --ext .js,.jsx,.ts,.tsx ./",
    "lint-fix": "yarn lint --fix"
  },
  "dependencies": {
    "@salto-io/adapter-api": "0.2.13",
    "@salto-io/adapter-utils": "0.2.13",
    "@salto-io/lowerdash": "0.2.13",
    "@salto-io/workspace": "0.2.13",
    "fuse.js": "^6.4.1",
    "lodash": "^4.17.21",
    "wu": "^2.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^12.7.1",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "eslint": "^6.2.2",
    "eslint-config-airbnb": "18.0.1",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-each": "^26.6.2",
    "typescript": "3.9.3"
  }
}
