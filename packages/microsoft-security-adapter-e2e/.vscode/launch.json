  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "microsoft-security-adapter Debug Jest Tests",
      "cwd": "${workspaceFolder}",
      "args": [
        "${workspaceFolder}/../../node_modules/.bin/jest",
        "--runInBand",
        "--config",
        "${workspaceFolder}/jest.config.js"
      ],
      "outFiles": [],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "microsoft-security-adapter Debug Jest E2E Tests",
      "cwd": "${workspaceFolder}",
      "env": {
        "RUN_E2E_TESTS": "1"
      },
      "args": [
        "${workspaceFolder}/../../node_modules/.bin/jest",
        "--runInBand",
        "--config",
        "${workspaceFolder}/jest.config.js"
      ],
      "outFiles": [],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
