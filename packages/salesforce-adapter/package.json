{
  "name": "@salto-io/salesforce-adapter",
  "version": "0.5.0",
  "license": "SEE LICENSE IN LICENSE",
  "description": "Salto Salesforce adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/salto-io/salto_monorepo"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/src",
    "dist/index.*",
    "dist/e2e_test"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "../../build_utils/turbo_run.sh build-ts ; ../../build_utils/turbo_run.sh lint",
    "test": "jest",
    "e2e-test": "RUN_E2E_TESTS=1 jest",
    "clean": "rm -rf ./dist .eslintcache",
    "watch-test": "yarn tsc-watch",
    "build-ts": "tsc -b",
    "watch-ts": "tsc -b -w",
    "lint": "eslint --max-warnings 0 ./",
    "lint-fix": "yarn lint --fix",
    "format": "prettier --write . --ignore-path=../../.prettierignore --ignore-path=../../.gitignore --ignore-path=.gitignore",
    "check-format": "prettier --check . --ignore-path=../../.prettierignore --ignore-path=../../.gitignore --ignore-path=.gitignore"
  },
  "dependencies": {
    "@salesforce/core": "^8.1.1",
    "@salesforce/source-deploy-retrieve": "^12.1.4",
    "@salesforce/templates": "^61.4.11",
    "@salto-io/adapter-api": "0.5.0",
    "@salto-io/adapter-components": "0.5.0",
    "@salto-io/adapter-utils": "0.5.0",
    "@salto-io/file": "0.5.0",
    "@salto-io/jsforce": "^1.9.4",
    "@salto-io/logging": "0.5.0",
    "@salto-io/lowerdash": "0.5.0",
    "@salto-io/salesforce-formula-parser": "0.1.5",
    "fast-xml-parser": "^4.4.0",
    "humanize-duration": "^3.22.0",
    "joi": "^17.4.0",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.27",
    "requestretry": "^7.1.0",
    "wu": "^2.1.0"
  },
  "devDependencies": {
    "@salto-io/e2e-credentials-store": "0.5.0",
    "@salto-io/element-test-utils": "0.5.0",
    "@salto-io/jest-extended": "^4.0.3",
    "@salto-io/jsforce-types": "^0.1.0",
    "@salto-io/test-utils": "0.5.0",
    "@types/jest": "^29.5.12",
    "@types/jszip": "^3.4.0",
    "@types/lodash": "^4.14.168",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^18.9.0",
    "@types/requestretry": "^1.12.8",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "nock": "^12.0.1",
    "prettier": "3.2.5",
    "request": "^2.88.2",
    "ts-jest": "^29.2.0",
    "tsc-watch": "^2.2.1",
    "turbo": "^2.0.6",
    "typescript": "4.8.4"
  }
}
