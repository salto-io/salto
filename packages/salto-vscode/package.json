{
    "name": "salto-vscode",
    "displayName": "salto-vscode",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.37.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.bp"
    ],
    "main": "./dist/src/extension.js",
    "contributes": {
        "configuration": {
            "title": "Salto",
            "properties": {
                "salto.salto_exe_path": {
                    "type": "string",
                    "scope": "machine",
                    "default": "/usr/local/bin/salto",
                    "description": "Path to the salto executable"
                },
                "salto.additionalBlueprintDirs": {
                    "type": "array",
                    "default": [],
                    "scope": "resource",
                    "description": "Paths to additional BP dirs that should be included"
                },
                "salto.additionalBlueprints": {
                    "type": "array",
                    "default": [],
                    "scope": "resource",
                    "description": "Paths to additional BP that should be included"
                },
                "salto.discover_output_dir": {
                    "type": "string",
                    "default": ".",
                    "scope": "resource",
                    "description": "Paths to discover output directory"
                }
            }
        },
        "languages": [
            {
                "id": "blueprint",
                "aliases": [
                    "Blueprint",
                    "blueprint"
                ],
                "extensions": [
                    ".bp"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "blueprint",
                "scopeName": "source.blueprint",
                "path": "./syntaxes/blueprint.json"
            }
        ],
        "commands": [
            {
                "command": "salto.printMergedElementsNames",
                "title": "Salto Debug: Print Merged Elements Names"
            },
            {
                "command": "salto.printMergedElementsCount",
                "title": "Salto Debug: Print Merged Elements Count"
            },
            {
                "command": "salto.printErrors",
                "title" : "Salto Debug: Print Errors"
            },
            {
                "command" : "salto.getCursorContext",
                "title" : "Salto Debug: Cursor Context"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run build && yarn test",
        "prepublishOnly": "yarn test",
        "build": "yarn run lint && yarn run build-ts",
        "build-ts": "tsc",
        "watch": "tsc -w",
        "test": "jest --forceExit --detectOpenHandles",
        "clean-ts": "node ./node_modules/.bin/ts-cleaner -d dist -s . -v",
        "clean-ts-test": "yarn run clean-ts && yarn run test",
        "watch-test": "yarn run tsc-watch --onSuccess 'yarn run clean-ts-test'",
        "lint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx ./",
        "lint-fix": "yarn run lint -- --fix"
    },
    "dependencies": {
        "salto" : "0.1.0",
        "adapter-api" : "0.1.0",
        "lodash": "^4.17.11",
        "wu": "^2.1.0",
        "async-file": "^2.0.2"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/jest-cli": "^23.6.0",
        "@types/node": "^10.12.21",
        "@types/vscode": "1.37",
        "jest-circus": "^24.9.0",
        "jest-cli": "^24.8.0",
        "jest-core": "^0.0.0",
        "tslint": "^5.12.1",
        "typescript": "^3.3.1",
        "vscode-test": "^1.0.2"
    }
}