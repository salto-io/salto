{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "paths": {
            "jsforce": [
                "../../node_modules/jsforce-types"
            ],
            "yargonaut": [
                "src/types/yargonaut"
            ],
            // allow imports from subdirectories:
            // e.g, "import Set from '@salto/lowerdash/collections/set'"
            "@salto/lowerdash/*": [
                "../../node_modules/@salto/lowerdash/dist/src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*",
    ]
}
