{
  "name": "salto",
  "version": "0.1.0",
  "description": "Salto core and CLI",
  "repository": {
    "type": "git",
    "url": "https://github.com/salto-io/salto"
  },
  "private": true,
  "bin": {
    "salto": "./bin/salto"
  },
  "files": [
    "bin/**/*",
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "build": "npm run lint && npm run build-ts && npm run build-go",
    "client": "npx ts-node src/cli/salto-cli.ts",
    "test": "jest --forceExit --verbose --detectOpenHandles",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-go": "./src/parser/hcl_plugin/build.sh ./dist",
    "lint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx ./",
    "lint-fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@types/async": "^3.0.0",
    "@types/inquirer": "0.0.35",
    "@types/lodash": "^4.14.133",
    "adapter-api": "github:salto-io/adapter-api",
    "async": "^3.1.0",
    "async-file": "^2.0.2",
    "chalk": "^2.3.0",
    "commander": "^2.20.0",
    "commander-ts": "0.1.5",
    "core-js": "^2.5.1",
    "fuse.js": "^3.4.5",
    "inquirer": "^3.3.0",
    "lodash": "^4.17.11",
    "ora": "^1.3.0",
    "salesforce-adapter": "github:salto-io/salesforce-adapter",
    "ts-loader": "^6.0.2",
    "ts-node": "^5.0.0",
    "typescript": "^3.4.5",
    "winston": "^3.2.1",
    "wu": "^2.1.0"
  },
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "@types/shelljs": "^0.7.8",
    "@types/supertest": "^2.0.4",
    "@types/wu": "^2.1.39",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "chai": "^4.1.2",
    "codecov": "^3.5.0",
    "concurrently": "^3.5.1",
    "coverage-diff-back": "^0.1.0",
    "dts-gen": "^0.5.8",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "jest": "^24.0.0",
    "jest-junit": "^6.4.0",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^24.0.2"
  }
}
