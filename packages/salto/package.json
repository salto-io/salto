{
  "name": "salto",
  "version": "0.1.0",
  "description": "Salto core and CLI",
  "repository": {
    "type": "git",
    "url": "https://github.com/salto-io/salto_monorepo"
  },
  "private": true,
  "bin": {
    "salto": "./bin/salto"
  },
  "files": [
    "bin/**/*",
    "dist/**/*"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "yarn run build",
    "prepublishOnly": "yarn test",
    "build": "yarn run lint && yarn run build-ts && yarn run build-go",
    "client": "src/cli/salto-cli.ts",
    "test": "jest --forceExit --detectOpenHandles",
    "clean-ts": "node ./node_modules/.bin/ts-cleaner -d dist -s . -v",
    "clean-ts-test": "yarn run clean-ts && yarn run test",
    "watch-test": "yarn run tsc-watch --onSuccess 'yarn run clean-ts-test'",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-go": "./src/parser/hcl_plugin/build.sh ./dist",
    "lint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx ./",
    "lint-fix": "yarn run lint -- --fix"
  },
  "dependencies": {
    "adapter-api": "0.1.0",
    "async": "^3.1.0",
    "async-file": "^2.0.2",
    "chalk": "^2.3.0",
    "fuse.js": "^3.4.5",
    "inquirer": "^3.3.0",
    "lodash": "^4.17.11",
    "require-directory": "^2.1.1",
    "salesforce-adapter": "0.1.0",
    "source-map-support": "^0.5.13",
    "wu": "^2.1.0",
    "yargonaut": "^1.1.4",
    "yargs": "^13.3.0"
  },
  "devDependencies": {
    "@types/async": "^3.0.0",
    "@types/inquirer": "0.0.35",
    "@types/jest": "^22.1.3",
    "@types/lodash": "^4.14.133",
    "@types/node": "^9.4.6",
    "@types/require-directory": "^2.1.1",
    "@types/shelljs": "^0.7.8",
    "@types/supertest": "^2.0.4",
    "@types/wu": "^2.1.39",
    "@types/yargs": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "dts-gen": "^0.5.8",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "jest": "^24.0.0",
    "jest-junit": "^6.4.0",
    "ts-cleaner": "^1.0.2",
    "tsc-watch": "^2.2.1",
    "typescript": "^3.5.3"
  }
}
