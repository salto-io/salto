  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "sap-adapter Debug Jest Tests",
      "cwd": "${workspaceFolder}",
      "args": [
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--config",
        "${workspaceRoot}/jest.config.js"
      ],
      "outFiles": [],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "sap-adapter Debug Jest E2E Tests",
      "cwd": "${workspaceFolder}",
      "env": {
        "RUN_E2E_TESTS": "1",
      },
      "args": [
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--config",
        "${workspaceRoot}/jest.config.js"
      ],
      "outFiles": [],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
  ]
}
