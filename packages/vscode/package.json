{
  "name": "salto-vscode",
  "displayName": "Salto NACL Configuration Editor",
  "description": "Provides rich support for NACL Configuration files, including syntax highlighting, auto-complete, code navigation and more.",
  "version": "0.4.8",
  "publishConfig": {
    "access": "public"
  },
  "icon": "icons/images/file_type_salto_opaque.png",
  "galleryBanner": {
    "color": "#4A5568",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.36.0"
  },
  "publisher": "salto-io",
  "repository": {
    "type": "git",
    "url": "https://github.com/salto-io/salto"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.nacl"
  ],
  "main": "./dist/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "salto.copyReference",
        "title": "Copy Salto Reference"
      },
      {
        "command": "salto.goToService",
        "title": "Go To Service"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "salto.copyReference",
          "group": "9_cutcopypaste",
          "when": "resourceExtname == .nacl"
        },
        {
          "command": "salto.goToService",
          "group": "navigation@3",
          "when": "resourceExtname == .nacl"
        }
      ]
    },
    "languages": [
      {
        "id": "salto",
        "aliases": [
          "Salto",
          "salto"
        ],
        "extensions": [
          ".nacl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "salto",
        "scopeName": "source.salto",
        "path": "./syntaxes/salto.json"
      }
    ],
    "iconThemes": [
      {
        "id": "salto_nacl",
        "label": "Salto NACL",
        "path": "./icons/salto-icon-theme.json"
      }
    ]
  },
  "scripts": {
    "build": "../../build_utils/turbo_run.sh build-ts ; ../../build_utils/turbo_run.sh lint",
    "build-ts": "tsc -b",
    "watch-ts": "tsc -b -w",
    "clean": "rm -rf ./dist .eslintcache",
    "test": "jest --passWithNoTests",
    "e2e-test": "RUN_E2E_TESTS=1 jest",
    "watch-test": "yarn tsc-watch",
    "lint": "eslint --max-warnings 0 ./",
    "lint-fix": "yarn lint --fix",
    "format": "prettier --write . --ignore-path=../../.prettierignore --ignore-path=../../.gitignore --ignore-path=.gitignore",
    "check-format": "prettier --check . --ignore-path=../../.prettierignore --ignore-path=../../.gitignore --ignore-path=.gitignore",
    "package": "bash ./scripts/package.sh"
  },
  "dependencies": {
    "@salto-io/adapter-creators": "0.4.8",
    "@salto-io/core": "0.4.8",
    "@salto-io/file": "0.4.8",
    "@salto-io/lang-server": "0.4.8",
    "@salto-io/lowerdash": "0.4.8",
    "@salto-io/parser": "0.4.8",
    "@salto-io/workspace": "0.4.8",
    "clipboardy": "^2.3.0",
    "lodash": "^4.17.21",
    "open": "^7.2.0",
    "wu": "^2.1.0"
  },
  "devDependencies": {
    "@salto-io/element-test-utils": "0.4.8",
    "@types/jest": "^29.5.12",
    "@types/vscode": "^1.36",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "prettier": "3.2.5",
    "readdirp": "^3.1.1",
    "tmp-promise": "^2.0.2",
    "ts-jest": "^29.2.0",
    "tsc-watch": "^2.2.1",
    "turbo": "^2.0.6",
    "typescript": "4.8.4",
    "vsce": "^2.9.2",
    "vscode-test": "^1.0.2"
  }
}
