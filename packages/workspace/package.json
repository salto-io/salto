{
  "name": "@salto-io/workspace",
  "version": "0.2.8",
  "license": "Apache-2.0",
  "description": "Salto workspace",
  "repository": {
    "type": "git",
    "url": "https://github.com/salto-io/salto"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src",
    "test",
    "index.ts"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn concurrently \"yarn lint\" \"yarn build-ts\"",
    "test": "jest",
    "clean": "rm -rf ./dist .eslintcache ./src/generated",
    "clean-ts": "../../build_utils/clean-old-ts.sh",
    "clean-ts-test": "yarn clean-ts && yarn test",
    "watch-test": "yarn tsc-watch --onSuccess 'yarn clean-ts-test'",
    "build-ts": "tsc -b && yarn clean-ts",
    "generate": "mkdir -p src/generated && yarn nearleyc src/parser/internal/nearly/hcl.ne -o src/generated/hcl.js",
    "watch-ts": "tsc -b -w",
    "lint": "eslint --cache --max-warnings 0 --ext .js,.jsx,.ts,.tsx ./",
    "lint-fix": "yarn lint --fix"
  },
  "dependencies": {
    "@salto-io/adapter-api": "0.2.8",
    "@salto-io/adapter-utils": "0.2.8",
    "@salto-io/logging": "0.2.8",
    "@salto-io/lowerdash": "0.2.8",
    "is-promise": "4.0.0",
    "lodash": "^4.17.21",
    "moo": "^0.5.1",
    "nearley": "2.19.2",
    "wu": "^2.1.0"
  },
  "devDependencies": {
    "@salto-io/dag": "0.2.8",
    "@salto-io/salesforce-adapter": "0.2.8",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/moo": "^0.5.0",
    "@types/nearley": "^2.11.0",
    "@types/node": "^12.7.1",
    "@types/wu": "^2.1.40",
    "@typescript-eslint/eslint-plugin": "2.31.0",
    "@typescript-eslint/parser": "2.31.0",
    "eslint": "^6.2.2",
    "eslint-config-airbnb": "18.0.1",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "jest-each": "^26.6.2",
    "jest-junit": "^12.0.0",
    "tsc-watch": "^2.2.1",
    "typescript": "3.9.3"
  }
}
