{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [        
        {
            "type": "node",
            "name": "x.ts",
            "request": "launch",
            "program": "/usr/local/bin/ts-node",
            "args": [
                "--files",
                "${workspaceFolder}/x.ts"
            ],
            "env": {
                "TS_NODE_COMPILER_OPTIONS": "{\"noUnusedLocals\": false}"
            },
            "cwd": "${workspaceFolder}/../packages/salto",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "fetch",
            "program": "/usr/local/bin/salto",
            "args": [
                "fetch", "-v", "-f"
            ],
            "env": {
                "JS_PARSE": "1"
            },
            "cwd": "/Users/hammer/tmp"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "deploy",
            "program": "/usr/local/bin/salto",
            "args": [
                "deploy", "-f"
            ],
            "env": {
                "JS_PARSE": "1"
            },
            "cwd": "/Users/hammer/tmp"
        }
    ]
}
